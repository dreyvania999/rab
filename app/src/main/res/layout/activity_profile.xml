<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profile">


    <Button
        android:id="@+id/editprof"
        android:layout_width="250dp"
        android:layout_height="48dp"
        android:background="@drawable/style_button"
        android:text="Редактировать профиль"
        app:layout_constraintBottom_toTopOf="@+id/exite"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.565"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.719" />

    <TextView
        android:id="@+id/username"
        android:layout_width="99dp"
        android:layout_height="18dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:text="Имя"
        app:layout_constraintBottom_toTopOf="@+id/usersurname"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.529"
        app:layout_constraintStart_toEndOf="@+id/photo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.845" />

    <TextView
        android:id="@+id/usersurname"
        android:layout_width="127dp"
        android:layout_height="17dp"
        android:layout_marginStart="32dp"
        android:text="Фамилия"
        app:layout_constraintBottom_toTopOf="@+id/editprof"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toEndOf="@+id/photo"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/photo"
        android:layout_width="78dp"
        android:layout_height="88dp"
        app:layout_constraintBottom_toTopOf="@+id/editprof"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.273"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.447"
        tools:srcCompat="@tools:sample/avatars" />

    <Button
        android:id="@+id/exite"
        android:layout_width="200dp"
        android:layout_height="35dp"
        android:background="@drawable/style_button"
        android:text="Выйти из профиля"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.004"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/photo"
        tools:ignore="TouchTargetSizeCheck" />

    <Button
        android:id="@+id/pageView"
        android:layout_width="200dp"
        android:layout_height="35dp"
        android:background="@drawable/style_button"
        android:text="Книжный каталог"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/exite"
        app:layout_constraintTop_toBottomOf="@+id/photo"
        tools:ignore="TouchTargetSizeCheck" />


</androidx.constraintlayout.widget.ConstraintLayout>